<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>64.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Credit Score Display</masterLabel>
    <description>Displays customer credit score with breakdown, status, and improvement suggestions</description>
    <targets>
        <target>lightning__RecordPage</target>
        <target>lightning__AppPage</target>
        <target>lightning__HomePage</target>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__RecordPage">
            <objects>
                <object>Account</object>
            </objects>
            <property name="showRecalculateButton" type="Boolean" default="false" label="Show Recalculate Button" description="Display recalculate button for agents"/>
            <property name="showHistory" type="Boolean" default="false" label="Show History Button" description="Display view history button"/>
            <property name="cardTitle" type="String" default="Credit Score" label="Card Title" description="Title displayed on the component card"/>
        </targetConfig>
        <targetConfig targets="lightning__AppPage,lightning__HomePage">
            <property name="recordId" type="String" label="Account ID" description="Account record ID to display credit score for"/>
            <property name="showRecalculateButton" type="Boolean" default="false" label="Show Recalculate Button" description="Display recalculate button for agents"/>
            <property name="showHistory" type="Boolean" default="true" label="Show History Button" description="Display view history button"/>
            <property name="cardTitle" type="String" default="Credit Score" label="Card Title" description="Title displayed on the component card"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
